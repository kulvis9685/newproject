<div class="container-fluid">
    <div class="container">
        <div class="row">
            <div class="col-8 offset-2">
                <form action="" method="post" enctype="multipart/form-data">
                <div class="card mt-4">
                    <div class="card-header">
                        <h3 class="text text-center">Creat Product</h3>
                    </div>
                    <div class="card-body">
                        <div class="form-group mt-4">
                            <lable>Product Image</lable>
                            <input type="file" class="form-control" name="pro_img">
                        </div>
                        <div class="form-group mt-4">
                            <lable>Product Name</lable>
                            <input type="text" class="form-control" placeholder="Product name" name="pro_name">
                        </div>
                        <div class="form-group mt-4">
                            <lable>Price</lable>
                            <input type="number" class="form-control" placeholder="Product price" name="pro_price">
                        </div>
                        <div class="form-group mt-4">
                           <lable>Category</lable>
                           <select class="form-control" name="category">
                               <option value="select">Select</option>
                               <option value="electonic">Electronic</option>
                               <option value="mans_product">Mans product</option>
                               <option value="girls_product">Girls product</option>
                               <option value="Fshion">Fshion</option>
                           </select>
                       </div> 
                        <div class="form-group mt-4">
                            <lable>Discription</lable>
                            <textarea class="form-control" rows="3" type="text" name="discription"></textarea>
                        </div>
                        <div class="form-group mt-4">
                            <lable>Quantity</lable>
                            <input type="number" class="form-control" placeholder="Product quantity" name="pro_quantity">
                        </div> 
                    </div>
                    <div class="card-footer mt-4">
                        <button class="btn btn-primary" type="submit">Create</button>
                    </div>
                </div>
                </form>
            </div>
        </div>
    </div>
</div> 