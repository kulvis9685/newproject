<div class="container-fluid">
    <div class="row">
        <div class="col-10"></div>
        <div class="col-2">
            <a href="/creat_product" class="btn btn-success">Creat Product</a>
        </div>
    </div>
    <table class="table table-borderd table-hover table-secondary table-striped">
        <thead>
            <tr>
                <th>S.no</th>
                <th>Product image</th>
                <th>Product Name</th>
                <th>Price</th>
                <th>Product Category</th>
                <th>Product quantity</th>
                <th>Edit/Delete</th>
            </tr>
        </thead>
        <tbody>
            <% for(let i=0; i < prodata.length; i++){%>
                <tr>
                    <td><%= i+1;%></td>
                    <td>
                        <img src="/product_img/<%= prodata[i].product_img;%>" alt="" height="100px" width="100px">
                    </td>
                    <td><%= prodata[i].product_name%></td>
                    <td><%= prodata[i].price%></td>
                    <td><%= prodata[i].category%></td>
                    <td><%= prodata[i].quantity%></td>
                    <td>
                        <a href="/edit_product?proId=<%= prodata[i].id%>" class="btn btn-info">Edit</a>
                        <a href="/delete_pro?productId=<%= prodata[i].id%>" class="btn btn-danger">Delete</a>
                    </td>
                </tr>
            <%}%>
        </tbody>
    </table>
</div>